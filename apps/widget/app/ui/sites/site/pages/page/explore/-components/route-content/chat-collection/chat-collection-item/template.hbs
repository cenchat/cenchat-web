{{! template-lint-disable no-invalid-interactive }}

<article class="card" data-test-chat-collection-item={{--chat.id}}>
  <a
    class="card__primary-link"
    href={{href-to "sites.site.pages.page.explore.chat" --chat.id}}
  >
  </a>

  <address
    class="sites-site-pages-page-explore_route-content-chat-collection-item__address"
  >
    <img
      class="sites-site-pages-page-explore_route-content-chat-collection-item__author-photo"
      data-test-chat-collection-item="author-photo"
      src={{get-user-photo --chat.creator}}
      alt={{get-user-display-name --chat.creator}}
    >
    <span data-test-chat-collection-item="author-name">
      {{get-user-display-name --chat.creator}}
    </span>
  </address>

  <h3
    class="sites-site-pages-page-explore_route-content-chat-collection-item__heading card__heading card__heading--small"
    data-test-chat-collection-item="name"
  >
    {{--chat.publicizedTitle}}
  </h3>
</article>
