<blockquote class="comment-item-content-quote" data-test-content-quote="{{--comment.replyTo.id}}">
  <cite class="comment-item-content-quote__author" data-test-content-quote="author-name">
    {{--comment.replyTo.authorOrAnonymous.displayName}}:
  </cite>

  {{#if --comment.replyTo.isDeleted}}
    <div data-test-content-quote="deleted">[deleted]</div>
  {{/if}}

  {{#if --comment.replyTo.text}}
    <div class="comment-item-content-quote__text" data-test-content-quote="text">{{linkify --comment.replyTo.text rel="noopener noreferrer"}}</div>
  {{/if}}

  {{#each --comment.replyTo.parsedAttachments as |attachment|}}
    <img
        class="comment-item-content-quote__sticker-attachment-image"
        data-test-content-quote="attachment-image"
        src="{{attachment.imageUrl}}"
        alt="{{attachment.description}}">
  {{/each}}
</blockquote>
