<div class="{{class}}">
  <div class="comment-composer__container">
    {{#if (or comment.isTextAllowed comment.isMessageValid)}}
      {{comment-composer/comment-composer-message
          --comment=comment
          --onTextBoxInput=(action handleTextBoxInput)
          --onRemoveAttachmentClick=(action handleRemoveAttachmentClick)}}
    {{/if}}

    {{#if comment.taggedEntity}}
      {{comment-composer/comment-composer-tagged-entity-list
          --entities=comment.parsedTaggedEntity
          --onUntagEntityClick=(action handleUntagEntityClick)}}
    {{/if}}

    {{comment-composer/comment-composer-toolbar
        --comment=comment
        --onAddAttachmentClick=(action handleAddAttachmentClick)
        --onSendCommentClick=(action handleSendCommentClick)
        --onTagEntityClick=(action handleTagEntityClick)}}
  </div>

  {{#if (not comment.isTextAllowed)}}
    <div class="comment-composer__hint" data-test-comment-composer="hint">
      Texts can be added when replying to site admins or your followers
    </div>
  {{/if}}
</div>
