{{#ce-top-bar-row}}
  {{#if (eq --session.model.id --user.id)}}
    {{#ce-link-button data-test-top-bar-actions="edit-link" href=(href-to 'profile.edit')}}
      Edit profile
    {{/ce-link-button}}

    {{#ce-button data-test-top-bar-actions="sign-out-button" --onClick=(action --onSignOutClick)}}
      Sign out
    {{/ce-button}}
  {{else}}
    {{#if (not-eq isFollowingUser null)}}
      {{#if isFollowingUser}}
        {{unfollow-user-button --userToUnfollow=--user --onUnfollowUser=(action handleUnfollowUser)}}
      {{else}}
        {{follow-user-button --userToFollow=--user --onFollowUser=(action handleFollowUser)}}
      {{/if}}
    {{/if}}
  {{/if}}
{{/ce-top-bar-row}}
