{{yield}}

{{#if --session.model}}
  {{#ce-navbar data-test-application="navbar"}}
    {{ce-icon-link-button
        data-test-application="notification-link"
        href=(href-to 'notifications')
        title="Notifications"
        aria-label="Notifications"
        icon="notifications"
        badged=--session.model.metaInfo.hasNewNotification}}

    {{ce-icon-link-button
        data-test-application="profile-username-link"
        href=(href-to 'profile' --session.model.urlKey)
        title="Profile"
        aria-label="Profile"
        icon="account_circle"}}

    {{ce-icon-link-button
        data-test-application="search-link"
        href=(href-to 'search')
        title="Search"
        aria-label="Search"
        icon="search"}}

    {{ce-icon-link-button
        data-test-application="sites-link"
        href=(href-to 'sites.index')
        title="Sites"
        aria-label="Sites"
        icon="domain"}}
  {{/ce-navbar}}
{{/if}}

{{ce-toast data-test-application="toast"}}
