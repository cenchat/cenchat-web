{{#ce-form class="card" --onSubmit=(action --onInviteRequestFormSubmit inviteRequest)}}
  <header class="card__header">
    <h2 class="card__heading">Get an invite</h2>
    <p class="card__subheading">Cenchat for publishers is currently available to select partners only</p>
  </header>
  
  {{ce-field
      class="card__field"
      name="website"
      data-test-main-content-invite-form="website-field"
      type="url"
      required=true
      label="Website"
      --onInput=(action handleInviteRequestFormDataChange)}}
  
  {{#ce-field
      class="card__field"
      name="monthlyViews"
      data-test-main-content-invite-form="monthly-views-field"
      type="select"
      label="Total monthly pageviews"
      --onChange=(action handleInviteRequestFormDataChange)}}
    <option value="lt-1m">Less than 1M</option>
    <option value="1m-5m">1M - 5M</option>
    <option value="5m-20m">5M - 20M</option>
    <option value="20m-50m">20M - 50M</option>
    <option value="gt-50m">Over 50M</option>
  {{/ce-field}}

  {{#ce-button class="card__action" data-test-main-content-invite-form="submit-button" type="submit"}}
    Submit
  {{/ce-button}}
{{/ce-form}}
