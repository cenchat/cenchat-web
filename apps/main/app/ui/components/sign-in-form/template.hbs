<article class="sign-in-form card card--centerized {{class}}">
  {{ce-icon-button
      class="sign-in-form__info-button"
      title="Show additional info when signing in"
      aria-label="Show additional info when signing in"
      icon="info_outline"
      size="small"
      --onClick=(action showAdditionalInfo)}}

  {{firebaseui-auth uiConfig=uiConfig}}

  <footer class="sign-in-form__footer">
    Cenchat for <strong class="sign-in-form__strong">publishers</strong> is currently available to select partners only. Sign in to get an invite.
  </footer>
</article>
