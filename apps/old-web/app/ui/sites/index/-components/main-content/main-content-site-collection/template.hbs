{{#infinite-content class="layout__section layout__section--headerless" tagName="section" --query=--sites}}
  {{#each --sites as |site|}}
    {{sites/index/-components/main-content/main-content-site-collection/site-collection-item
        --router=--router
        --site=site}}
  {{else}}
    <article class="card card--centered-position" data-test-main-content-site-collection="empty-state">
      <header class="card__header">
        <h2 class="card__heading">Get started</h2>
        <p class="card__subheading">Integrate Cenchat Comments on your website</p>
      </header>

      <div class="card__action">
        {{#ce-link-button href=(href-to 'sites.index.new')}}Add site{{/ce-link-button}}
      </div>
    </article>
  {{/each}}
{{/infinite-content}}
