<div
  class="chats-chat_route-content section__content section__content--compact"
>
  {{#if this.isPageLinkVisible}}
    <aside class="chats-chat_route-content__page-link-container">
      <div class="chats-chat_route-content__page-link-texts">
        <div>Chat for:</div>

        <a
          data-test-route-content="page-link"
          href="http://{{--chat.site.hostname}}/{{--chat.page.slug}}"
          target="_blank"
          rel="noopener noreferrer"
        >
          {{--chat.page.title}}
        </a>
      </div>

      {{ce-icon-button
        class="chats-chat_route-content__hide-page-link-button"
        data-test-route-content="hide-page-link-button"
        title="Hide page link"
        aria-label="Hide page link"
        icon="close"
        size="small"
        --onClick=(action this.handleHidePageLinkClick)
      }}
    </aside>
  {{/if}}

  {{#if --isPrivacyFormVisible}}
    {{chats/chat/-components/route-content/privacy-form
      --chat=--chat
      --onPrivacyFormSubmit=(action --onPrivacyFormSubmit)
    }}
  {{/if}}

  {{yield}}
</div>
