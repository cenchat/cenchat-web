<li
    class="notification-list-item list__item"
    data-test-notification-list-follow-item="host">
  <div class="notification-list-item__row">
    <img
        class="list__avatar list__avatar--circle"
        data-test-notification-list-follow-item="from-photo"
        src="{{--notification.from.avatarUrl}}"
        alt="{{--notification.from.displayName}}">
    
    <div class="list__multi-line-content">
      <h2
          class="list__primary-text"
          data-test-notification-list-follow-item="title">
        {{--notification.displayMessage.title}}
      </h2>

      <p
          class="list__secondary-text"
          data-test-notification-list-follow-item="created-on">
        {{moment-from-now --notification.createdOn}}
      </p>
    </div>
  </div>

  <div>
    {{#if (eq isFollowingNotificationSender false)}}
      {{follow-user-button
          data-test-notification-list-follow-item="follow-back-button"
          --userToFollow=--notification.from
          --onFollowUser=(action handleFollowUser)}}
    {{/if}}
  </div>
</li>
