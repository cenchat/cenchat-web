<article class="card {{class}}">
  {{cenchat-wordmark-logo class="email-link-auth__logo"}}

  {{#if this.isSignInWithEmailLink}}
    {{email-link-auth/email-link-auth-sign-in
        --firebase=(lookup 'service:firebase')
        --onEmailLinkSignInClick=(action this.handleEmailLinkSignInClick)}}
  {{else}}
    {{email-link-auth/email-link-auth-send-link
        --firebase=(lookup 'service:firebase')
        --redirectUrl=--redirectUrl
        --isAnonymousAllowed=--isAnonymousAllowed
        --onContinueAnonymouslyClick=(action this.handleContinueAnonymouslyClick)}}
  {{/if}}

  <footer>
    <p class="email-link-auth__policy-message">
      By continuing, you're indicating that you've read the <a href="https://cenchat.com/about/privacy">Privacy Policy</a> and agree to the <a href="https://cenchat.com/about/terms">Terms of Service</a>
    </p>
  </footer>
</article>
